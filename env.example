# ============================================
# Easy Writer Web Component - Environment Variables
# ============================================
# Скопируйте этот файл в .env и заполните значения

# ============================================
# Database (используется общий PostgreSQL из ai-article-backend)
# ============================================
POSTGRES_USER=easy_writer
POSTGRES_PASSWORD=your_secure_password_here
EASY_WRYTER_DB_NAME=easy_wryter_db

# ============================================
# Application
# ============================================
EASY_WRYTER_PORT=8001
DEBUG=false
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# Auth
# ============================================
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ============================================
# OAuth
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
YANDEX_CLIENT_ID=
YANDEX_CLIENT_SECRET=

# ============================================
# AI Providers
# ============================================
GIGACHAT_API_KEY=
GIGACHAT_SCOPE=GIGACHAT_API_PERS
YANDEXGPT_API_KEY=
YANDEXGPT_FOLDER_ID=
OPENAI_API_KEY=
OPENAI_PROXY_URL=
FUSIONBRAIN_API_KEY=
FUSIONBRAIN_SECRET_KEY=

# ============================================
# Upscale
# ============================================
UPSCALE_API_KEY=
UPSCALE_API_URL=

